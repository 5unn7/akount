# Marakana Tenant ID (for multi-tenant support)
MARAKANA_TENANT_ID=your_marakana_tenant_id_here

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/akount_dev"

# Clerk Authentication (https://clerk.com)
# Get your keys from the Clerk Dashboard
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here

# Clerk Webhook Secret (for user sync)
CLERK_WEBHOOK_SECRET=your_clerk_webhook_secret_here

# Clerk Routes
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# Base URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
API_URL=http://localhost:3001

# CORS Origins (comma-separated list for production)
# Example: https://app.akount.com,https://www.akount.com
CORS_ORIGINS=http://localhost:3000

# Perplexity AI (https://docs.perplexity.ai)
# Get your API key from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key_here
